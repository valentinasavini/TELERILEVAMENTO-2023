plot(en01, col=cl)

en13 <- raster("EN_0013.png")
plot(en13, col=cl)

#controllo che le immagini che ho riportato nella lista sia uguale alla prima riportata
# check 1
par(mfrow=c(1,2))
plot(en01, col= cl)
plot(en[[1]], col= cl)
# check 2
