# R_code_time_series 

# TEORIA 
# Codice per importare insieme i dati creando una lista con pattern 
# comune con funzione list.files(). Successivamente applicando alla lista una funzione (raster)
# tramite funzione lapply() e mettiamo tutti i dati importati insieme tramite la funzione stack().

### ESERCIZIO 1 - GREECELAND

# Installo i pacchetti 
install.packages("raster")
install.packages("rasterVis")
library(raster)
library(rasterVis)

# Imposto la working directory
setwd("C:/lab/greenland")

## METODO 1
# Importo dati
lst_2000 <- raster("lst_2000.tif")
lst_2005 <- raster("lst_2005.tif")
lst_2010 <- raster("lst_2010.tif")
lst_2015 <- raster("lst_2015.tif")
# Plot
par(mfrow=c(2,2))
plot(lst_2000)
plot(lst_2005)
plot(lst_2010)
plot(lst_2015)
dev.off()

## METODO 2
# list.files, lapply, stack
# Creo lisTa
rlist <- list.files(pattern="lst")
rlist
# Collego lista a funzione
import <- lapply(rlist,raster)
import
# Unisco insieme
TGr <- stack(import)
TGr
# Plot
plot(TGr)
# Cambio colori 
plotRGB(TGr, 1, 2, 3, stretch="Lin")
plotRGB(TGr, 2, 3, 4, stretch="Lin")
plotRGB(TGr, 4, 3, 2, stretch="Lin")

# Differenza (2005-2000)
dift <- TGr[[2]] - TGr[[1]]
plot(dift)
# Cambio colore
cl <- colorRampPalette(c("blue","light blue","pink","red"))(100)
plot(TGr, col=cl)
dev.off()

### ESERCIZIO 2 - NO2 dimunuisce durante il periodo del lockdown

# Installo e imposto working directory
library(raster)
setwd("C:/lab/en")

## METODO 1
# Importo due immagini 
EN01 <- raster("EN_0001.png")
EN13 <- raster("EN_0013.png")
# Creo palette
cl <- colorRampPalette(c('red','orange','yellow'))(100) 
# Plot
par(mfrow=c(2,1))
plot(EN01, col=cl)
plot(EN13, col=cl)

## METODO 2
rlist <- list.files(pattern = "EN")
rimp <- lapply(rlist, raster)
en <- stack(rimp)
plot(en, col=cl)

# Effettuo un check tra metodo 1 e 2
# Check 1
par(mfrow=c(1,2))
plot(EN01, col= cl)
plot(en[[1]], col= cl)
# Check 2
difcheck <- EN01 - en[[1]]
difcheck 
plot(difcheck) # un colore check OK

# ESERCIZIO: osservare le differenze tra inzio e fine pandemia
# Plot prima e dopo:
# 1
par(mfrow=c(1,2))
plot(en[[1]], col=cl)
plot(en[[13]], col=cl)
# 2 (usando funzione stack())
en113 <- stack(en[[1]], en[[13]])
plot(en113, col=cl)

dev.off()

# Vediamo le differenze:
difen <-  en[[1]] - en[[13]]
cldif <- colorRampPalette(c('blue','white','red'))(100) 
# Plot con palette
plot(difen, col=cldif) # zone rosse dove prima c'era molta produzione 
# Plot con RGB 
plotRGB(en, r=1, g=7, b=13, stretch="lin")
plotRGB(en, r=1, g=7, b=13, stretch="hist") # valori rossi gennaio, valori verdi febbraio, valori blu marzo (valori piÃ¹ alti)
