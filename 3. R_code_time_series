# R_code_time _series 
# Time series analysis 

#installare i pacchetti 
install.packages("raster")
install.packages("rasterVis")
library(raster)
library(rasterVis)

#imposto workdirectory
setwd("C:/lab/greenland")

### ESERCIZIO 1
#importo dati
# METODO 1
lst_2000 <- raster("lst_2000.tif")
lst_2005 <- raster("lst_2005.tif")
lst_2010 <- raster("lst_2010.tif")
lst_2015 <- raster("lst_2015.tif")

#plotto 
par(mfrow=c(2,2))
plot(lst_2000)
plot(lst_2005)
plot(lst_2010)
plot(lst_2015)
dev.off()

# METODO 2
# list.files, lapply, stack
# creo lisra
rlist <- list.files(pattern="lst")
rlist
# collego lista a funzione
import <- lapply(rlist,raster)
import
# unisco insieme
TGr <- stack(import)
TGr
# plot
plot(TGr)
# cambio colori 
plotRGB(TGr, 1, 2, 3, stretch="Lin")
plotRGB(TGr, 2, 3, 4, stretch="Lin")
plotRGB(TGr, 4, 3, 2, stretch="Lin")

# differenza (2005-2000)
dift <- TGr[[2]] - TGr[[1]]
plot(dift)

# cambio colore
cl <- colorRampPalette(c("blue","light blue","pink","red"))(100)
plot(TGr, col=cl)
dev.off()

### ESERCIZIO 2: 
#NO2 dimuisce durante il lperiodo del lockdown

# Installo e imposto working directory
library(raster)
setwd("C:/lab/en")

#metodo 1
# Importo due immagini 
EN01 <- raster("EN_0001.png")
EN13 <- raster("EN_0013.png")

# creo palette
cl <- colorRampPalette(c('red','orange','yellow'))(100) 

# plot
par(mfrow=c(2,1))
plot(EN01, col=cl)
plot(EN13, col=cl)

# metodo 2: importo tutto come nell'esercizio 1
# seguendo step: list.files, lapply, stack

rlist <- list.files(pattern = "EN")
rimp <- lapply(rlist, raster)
en <- stack(rimp)
plot(en, col=cl)

# controllo che le immagini che ho riportato nella lista sia uguale alla prima riportata
# check 1
par(mfrow=c(1,2))
plot(EN01, col= cl)
plot(en[[1]], col= cl)
# check 1
difcheck <- EN01 - en[[1]]
difcheck 
plot(difcheck) #un colore check OK

# Exercise: plot EN01 e EN13 (inizio e fine pandemia)
par(mfrow=c(1,2))
plot(en[[1]], col=cl)
plot(en[[13]], col=cl)

# o usando stack():
en113 <- stack(en[[1]], en[[13]])
plot(en113, col=cl)

# vediamo le differenze:
difen <-  en[[1]] - en[[13]]
cldif <- colorRampPalette(c('blue','white','red'))(100) 
plot(difen, col=cldif) # zone rosse dove prima c'era molta produzione 

# plotRGB 
plotRGB(en, r=1, g=7, b=13, stretch="lin")
plotRGB(en, r=1, g=7, b=13, stretch="hist")
# valori rossi gennaio, valori verdi febbraio, valori blu marzo (valori piÃ¹ alti)
